---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
  class?: string;
  alt: string;
  loading?: "lazy" | "eager";
  src: ImageMetadata;
  width?: number;
  height?: number;
}

const {
  alt,
  class: additionalClasses,
  loading = "lazy",
  src,
  width,
  height,
} = Astro.props;

const defaultFormats = ["webp", "jpeg", src.format];
---

<Picture
  {alt}
  class:list={["", additionalClasses]}
  formats={src.format !== "gif"
    ? ["avif", ...defaultFormats]
    : [...defaultFormats]}
  {loading}
  {src}
  {width}
  {height}
/>
