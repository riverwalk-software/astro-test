---
import { getCollection } from "astro:content";
import ArticleTags from "../../components/ArticleTags.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const articles = await getCollection("articles");
const input = articles
  .map((article) => article.data.tags.map((tag) => tag.id.toString()))
  .flat();
const tags = [...new Set(input)];
---

<BaseLayout title="Tag index" description="The tags index">
  <ArticleTags {tags} />
</BaseLayout>
